<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enableAutoHide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/enable_auto_hide"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <su.kaoyu.glyph.widget.ColorSettingView
            android:id="@+id/MenuColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <su.kaoyu.glyph.widget.ColorSettingView
            android:id="@+id/InputBgColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <su.kaoyu.glyph.widget.ColorSettingView
            android:id="@+id/InputColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <su.kaoyu.glyph.widget.ColorSettingView
            android:id="@+id/GlyphBgColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <su.kaoyu.glyph.widget.ColorSettingView
            android:id="@+id/GlyphLineColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <su.kaoyu.glyph.widget.ColorSettingView
            android:id="@+id/GlyphDotColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
